@model Prueba.ESTUDIANTE

@{
    ViewBag.Title = "Create";
}


<link href="~/www/estilos/CRUDStyle.css" rel="stylesheet" />

<h2>Crear Estudiante</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ESTUDIANTE</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.EST_USU, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EST_USU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EST_USU, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ID_REP, "REPRESENTANTE", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_REP", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_REP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ID_TIPOU, "ROL", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_TIPOU", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.ID_TIPOU, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EST_NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EST_NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EST_NOMBRE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EST_APELLIDO, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EST_APELLIDO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EST_APELLIDO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EST_CEDULA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="ced" name="EST_CEDULA" type="text">

            <span class="field-validation-valid text-danger" id="salida" data-valmsg-for="EST_CEDULA" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EST_FECHANAC, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-date="El campo EST_FECHANAC debe ser una fecha." data-val-required="El campo EST_FECHANAC es obligatorio." id="EST_FECHANAC" name="EST_FECHANAC" type="date" value="">
            @Html.ValidationMessageFor(model => model.EST_FECHANAC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EST_PASSWORD, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EST_PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EST_PASSWORD, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <p class="text-danger">@ViewData["Val"]</p>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" onclick="validar()" class="btn btn-success" />
            @Html.ActionLink("Volver", "Index", "ESTUDIANTEs", new { @class = "btn btn-primary" })
        </div>
    </div>
    <script src="~/Scripts/Validaciones.js"></script>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
