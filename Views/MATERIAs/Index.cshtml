@model IEnumerable<Prueba.MATERIA>

@{
    ViewBag.Title = "Gestión Materias";
}

<link href="~/www/estilos/CRUDStyle.css" rel="stylesheet" />


<h2>Gestión Materias</h2>

<p>
    @Html.ActionLink("Crear", "Create", "MATERIAs", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MAT_COD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MAT_NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MAT_GRADO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MAT_PARALELO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PROFESOR.PROF_USU)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MAT_COD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MAT_NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MAT_GRADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MAT_PARALELO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PROFESOR.PROF_USU)
        </td>
        <td align="right">
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_MATERIA }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.ID_MATERIA }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.ID_MATERIA }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
